<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F6F0E8"
    android:layout_height="match_parent"
    tools:context=".Achieve">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/floatingViewContainer"
        android:layout_height="match_parent"

        android:padding="10dp">
        <LinearLayout    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="Your"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#fe7e34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Achievements"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TableLayout
                android:id="@+id/tableLayout"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:stretchColumns="*"
                >

                <!-- Headers -->
                <TableRow
                    >
                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/tablehead"
                        android:text="Live Actions"
                        android:textStyle="bold"/>
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/tablehead"

                        android:gravity="center"
                        android:padding="5dp"
                        android:text="This\nWeek"
                        android:textColor="@color/black"

                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:textColor="@color/black"
                        android:gravity="center"
                        android:background="@drawable/tablehead"
                        android:text="Cumm Till\nDate"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:textColor="@color/black"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:background="@drawable/tablehead"
                        android:gravity="center"
                        android:text="Points Earned\nThis Week"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:textColor="@color/black"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:background="@drawable/tablehead"
                        android:gravity="center"
                        android:text="Points Earned\n Till Date"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/congrats_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            android:background="@color/white"

            android:paddingVertical="20dp"
            app:cardElevation="20dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView       android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:padding="9dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="CONGRATULATIONS!!!"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:text="You have Won "
                        android:textColor="#EE4E34"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView    android:id="@+id/earn_number"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#EE4E34"
                        android:text=""/>
                    <TextView       android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#EE4E34"
                        android:text="Action Points  "/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/logoImageView"
                    android:src="@drawable/trophy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginVertical="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"

                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/reddem_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="40dp"
            app:cardBackgroundColor="#fe7e34"
            app:cardCornerRadius="20dp"
            android:paddingVertical="20dp"
            app:cardElevation="20dp" >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Redeem"
                android:textColor="@color/white"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>