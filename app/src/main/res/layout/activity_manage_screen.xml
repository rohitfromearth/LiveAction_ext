<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F6F0E8"
    android:id="@+id/floatingViewContainer"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    tools:context=".Manage_screen">
    <LinearLayout    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#fe7e34"
            android:text="Manage"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#676767"
            android:text=" your LifeActions"/>
    </LinearLayout>
    <TextView
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#676767"
        android:layout_gravity="center"
        android:text="and get reminders"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#676767"
        android:layout_marginTop="15dp"
        android:text="Set your targets. After your first week your actuals will become your targets.
You can change your target at the beginning of the week(Sunday and Monday).
Target can be changed with a deviation of 10% from your actuals."/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- Headers -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/tablehead"
                        android:text="LiveActions"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/tablehead"

                        android:textStyle="bold"
                        android:text="Set\nTarget\n(Hours)"
                        />

                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/tablehead"

                        android:text="Set\nTarget\n(%)"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/tablehead"

                        android:text="Actual\n(Hours)"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/tablehead"

                        android:text="Actual\n(%)"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/tablehead"

                        android:text="Variance"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>
            <TextView       android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textColor="#676767"
                android:textSize="20dp"
                android:textStyle="bold"

                android:text="Life Action Comments"/>
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="40dp"
android:paddingHorizontal="15dp"

                app:cardCornerRadius="20dp"
                android:paddingVertical="20dp"
                app:cardElevation="20dp" >
                <TextView
                    android:id="@+id/comment_live_act"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Save Targets"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="40dp"
                app:cardBackgroundColor="#fe7e34"
                app:cardCornerRadius="20dp"
                android:paddingVertical="20dp"
                app:cardElevation="20dp" >
                <TextView
                    android:id="@+id/savetargt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Pat Yourself "
                    android:textColor="@color/white"
                    android:layout_marginVertical="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>