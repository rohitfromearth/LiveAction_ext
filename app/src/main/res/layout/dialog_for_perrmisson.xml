<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#9DB2BF"
    android:gravity="center"
    android:paddingVertical="20dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#9DB2BF">
        <ImageButton
            android:id="@+id/close_permission"
            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top|right"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@drawable/close_bg"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dropdown_background"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Direction : abcde Demo Text / Direction for user to proced with usage stst permission "
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="30dp"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_gravity="center"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/usaegstat_perm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="40dp"
            app:cardBackgroundColor="#fe7e34"
            app:cardCornerRadius="40dp"
            android:padding="40dp"
            app:cardElevation="20dp" >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Usage Stat Permission"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Direction : abcde Demo  i am typping here Text / Direction for user to proced with Accessbilty permission "
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="30dp"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_gravity="center"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/accessibilty_perm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="40dp"
            app:cardBackgroundColor="#fe7e34"
            app:cardCornerRadius="40dp"

            android:padding="40dp"
            app:cardElevation="20dp" >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Accessibity Permission "
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
