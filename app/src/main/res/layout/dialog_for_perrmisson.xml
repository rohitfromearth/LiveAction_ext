<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingVertical="20dp"
    app:cardBackgroundColor="#9DB2BF"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#9DB2BF">

        <ImageButton
            android:id="@+id/close_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/close_bg"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:cardCornerRadius="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dropdown_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Direction : The button will redirect to usage stat permission,find Liveaction_ext turn switch on "
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="italic" />

        <androidx.cardview.widget.CardView
            android:id="@+id/usaegstat_perm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="30dp"
            android:padding="40dp"
            app:cardBackgroundColor="#fe7e34"
            app:cardCornerRadius="40dp"
            app:cardElevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:text="Usage Stat Permission"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Direction : the button will redirect to the Accessibility service's settings, click on 'Installed apps', find LiveAction and turn switch on "
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="italic" />

        <androidx.cardview.widget.CardView
            android:id="@+id/accessibilty_perm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="30dp"
            android:padding="40dp"
            app:cardBackgroundColor="#fe7e34"

            app:cardCornerRadius="40dp"
            app:cardElevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:text="Accessibity Permission "
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
