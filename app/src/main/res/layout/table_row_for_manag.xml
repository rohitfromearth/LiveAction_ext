<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:stretchColumns="*"
    >
<TableRow
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvCategor"
        android:layout_width="0dp"

        android:layout_height="match_parent"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="@drawable/category_cell"
        android:gravity="center"


        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_actual_hr"
        android:layout_width="0dp"
android:inputType="number"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/middle_cell"


        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_actual_per"
        android:layout_width="0dp"
android:inputType="number"
        android:hint=" % "
        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/middle_cell"


        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvushour"
        android:layout_width="0dp"

        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/middle_cell"


        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvusper"
        android:layout_width="0dp"

        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/middle_cell"


        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/tvvariance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/middle_cell"
        android:textColor="@android:color/black"/>

</TableRow>
</TableLayout>